@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_MessageHeadComponent")

<body>
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>

    <div id="main-wrapper">
        <br />
        <!-- row -->
        <div class="container-fluid">
            <h3 class="text-center text-primary"> Identity Mail Platformu</h3>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body d-flex">
                            <div class="email-left-box" style="width: 15%;">
                                <a href="/Message/CreateMessage/" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                                @await Component.InvokeAsync("_MessageDetailComponent")
                            </div>

                            <div class="email-right-box ml-4" style="width: 85%;">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h3 class="mb-0">@ViewBag.v1</h3>
                                    
                                </div>
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @await Component.InvokeAsync("_MessageFooterComponent")
    </div>
    @await Component.InvokeAsync("_MessageScriptComponent");

    @RenderSection("Scripts", required: false)
</body>

</html>
